<% if resource.errors.any? %>
  <script>
    <% resource.errors.full_messages.each do |message| %>
      new Noty({
        type: 'error',
        layout: 'topCenter',
        theme: 'bootstrap-v4',
        timeout: false,
        closeWith: ['button', 'click'],
        text: '<%= message %>'
      }).show();
    <% end %>
  </script>
<% end %>
