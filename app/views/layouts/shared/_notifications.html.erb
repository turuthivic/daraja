<% unless flash.empty? %>
  <script>
    <% flash.each do |key, value| %>
      <% type = key.to_s.gsub('alert', 'error').gsub('notice', 'success') %>
      new Noty({
        type: '<%= type %>',
        text: '<%= value%>',
        layout: 'topRight',
        theme: 'bootstrap-v4',
        progressBar: false,
        timeout: '4000',
        closeWith: ['button', 'click']
      }).show();
    <% end %>
  </script>
<% end %>